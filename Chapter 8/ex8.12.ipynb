   ],
   "source": [
    "from random import shuffle\n",
    "\n",
    "word = list('python')\n",
    "\n",
    "first = word[0]\n",
    "last = word[-1]\n",
    "\n",
    "del word[0]\n",
    "del word[-1]\n",
    "\n",
    "shuffle(word)\n",
    "\n",
    "word_shuffle = []\n",
    "\n",
    "word_shuffle.append(first)\n",
    "\n",
    "for letter in word:\n",
    "    word_shuffle.append(letter)\n",
    "\n",
    "word_shuffle.append(last)\n",
    "\n",
    "print(''.join(word_shuffle))"
   ]
