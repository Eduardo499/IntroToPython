     "name": "stdout",
     "output_type": "stream",
     "text": [
      "20 is Even.\n"
     ]
    }
   ],
   "source": [
    "n = int(input('Enter a number: '))\n",
    "\n",
    "if n % 2 == 0:\n",
    "    print(f'{n} is Even.')\n",
    "else:\n",
    "    print(f'{n} is Odd.')"
   ]
  }
